<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/chooseLangFragment">

    <fragment
        android:id="@+id/registrationFragment"
        android:name="org.fairventures.treeo.ui.authentication.RegistrationFragment"
        android:label="fragment_registration"
        tools:layout="@layout/fragment_registration">
        <action
            android:id="@+id/action_registrationFragment_to_loginFragment"
            app:destination="@id/loginFragment">
            <argument
                android:name="email"
                android:defaultValue=""
                app:argType="string" />
        </action>
        <action
            android:id="@+id/action_registrationFragment_to_homeFragment"
            app:destination="@id/homeFragment">
            <argument
                android:name="username"
                android:defaultValue="username"
                app:argType="string" />
        </action>
        <action
            android:id="@+id/action_registrationFragment_to_SMSCodeFragment"
            app:destination="@id/SMSCodeFragment" />
        <action
            android:id="@+id/action_registrationFragment_to_chooseLangFragment"
            app:destination="@id/chooseLangFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="org.fairventures.treeo.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_registrationFragment"
            app:destination="@id/registrationFragment"
            app:popUpTo="@id/registrationFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="org.fairventures.treeo.ui.authentication.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment">
            <argument
                android:name="username"
                android:defaultValue="username"
                app:argType="string" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/SMSCodeFragment"
        android:name="org.fairventures.treeo.ui.authentication.SMSCodeFragment"
        android:label="fragment_s_m_s_code"
        tools:layout="@layout/fragment_s_m_s_code" >
        <action
            android:id="@+id/action_SMSCodeFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />
        <action
            android:id="@+id/action_SMSCodeFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/chooseLangFragment"
        android:name="org.fairventures.treeo.util.ChooseLangFragment"
        android:label="ChooseLangFragment" >
        <action
            android:id="@+id/action_chooseLangFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />
        <action
            android:id="@+id/action_chooseLangFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>
