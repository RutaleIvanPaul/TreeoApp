<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Treeo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_green</item>
        <item name="colorPrimaryVariant">@color/app_green_darker</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/quicksand</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    </style>

    <style name="TreeoToolbarTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="fontFamily">@font/quicksand</item>
    </style>

    <style name="Theme.Treeo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/app_green</item>
        <item name="android:statusBarColor">@color/app_background_color</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.TreeoCornerRadius" parent="">
        <item name="cornerSize">10%</item>
    </style>

    <style name="TextTheme">
        <item name="fontFamily">@font/quicksand</item>
        <item name="android:fontFamily">@font/quicksand</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.03125</item>
    </style>

    <style name="TitleTheme">
        <item name="fontFamily">@font/quicksand</item>
        <item name="android:fontFamily">@font/quicksand</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.03125</item>
    </style>

    <style name="HeadlineTheme">
        <item name="fontFamily">@font/quicksand</item>
        <item name="android:fontFamily">@font/quicksand</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0.03125</item>
    </style>

    <style name="TextThemeButton">
        <item name="fontFamily">@font/quicksand</item>
        <item name="android:fontFamily">@font/quicksand</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.03125</item>
    </style>
</resources>
