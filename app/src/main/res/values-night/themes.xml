<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Treeo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/quicksand</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    </style>

    <style name="TreeoToolbarTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="fontFamily">@font/quicksand</item>
    </style>

    <style name="Theme.Treeo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/app_green</item>
        <item name="android:statusBarColor">@color/app_background_color</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>


    <style name="ShapeAppearanceOverlay.App.TreeoCornerRadius" parent="">
        <item name="cornerSize">10%</item>
    </style>
</resources>
